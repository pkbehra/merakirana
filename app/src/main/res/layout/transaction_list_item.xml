<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/transImg"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/autologo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="date"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp" />

<!--
            <TextView
                android:id="@+id/txtCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="country"
                android:layout_below="@id/tvTransactionDate"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp" />
-->

            <TextView
                android:id="@+id/tvTransactionContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="contact"
                android:maxLines="2"
                android:layout_below="@id/tvTransactionDate"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTransactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/tvTransactionContact"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/tvTransactionAmount"
                android:background="@color/colorPrimaryDark"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

